    "version": "0.2.0",
    "configurations": [
        
        
        {
            "type": "node",
            "request": "launch",
            "name": "client",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "console": "internalConsole",
            "program": "${workspaceFolder}/test_launcher.js",
            "args": [""],
        },{
            "type": "node",
            "request": "launch",
            "name": "server",
            "skipFiles": [
                "<node_internals>/**"
